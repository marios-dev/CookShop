
<html>
<head>
    <script src="~/Scripts/Chart.js"></script>
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Chart.css" rel="stylesheet" />
</head>
<body>
    <div class="slider_area">
        <div class="bradcam_area latest_trand_area">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-xl-8 ">
                        <div class="slider_text text-center">
                            <div class="text">
                                <h3 style="color:black">Customers</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div id="chart_container" class="text-center">
            <canvas id="bar_chart_region"></canvas>
        </div>
        <div id="chart_container" class="text-center">
            <canvas id="bar_chart_city"></canvas>
        </div>
        <div id="chart_container" class="text-center">
            <canvas id="bar_chart_product_sales"></canvas>
        </div>
    </div>

    <script>
        //Regions
        var repArray =@Html.Raw(Json.Encode(ViewBag.CustomersPerRegion));
        var regions =@Html.Raw(Json.Encode(ViewBag.Regions));

        var ctx = $("#bar_chart_region");
        var bacChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: regions,
                datasets: [{
                    label: "Customers Per Region",
                    data: repArray,
                    backgroundColor: "rgba(242,166,54,.5)",
                    borderColor: "rgb(242,166,54)",
                    borderWidth: 1
                }]
            },
            options: {
                maintainAspectRatio: false,
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });

        //Cities
        var repArray =@Html.Raw(Json.Encode(ViewBag.CustomersPerCity));
        var regions =@Html.Raw(Json.Encode(ViewBag.Cities));

        var ctx = $("#bar_chart_city");
        var bacChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: regions,
                datasets: [{
                    label: "Customers Per City",
                    data: repArray,
                    backgroundColor: "rgba(242,166,54,.5)",
                    borderColor: "rgb(242,166,54)",
                    borderWidth: 1
                }]
            },
            options: {
                maintainAspectRatio: false,
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });

        //Product Sales
        var repArray =@Html.Raw(Json.Encode(ViewBag.Quanities));
        var regions =@Html.Raw(Json.Encode(ViewBag.Products));

        var ctx = $("#bar_chart_product_sales");
        var bacChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: regions,
                datasets: [{
                    label: "Sales Per Product",
                    data: repArray,
                    backgroundColor: "rgba(242,166,54,.5)",
                    borderColor: "rgb(242,166,54)",
                    borderWidth: 1
                }]
            },
            options: {
                maintainAspectRatio: false,
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });

    </script>

</body>
</html>
